@model ContactForm
@{
    ViewData["Title"] = "Contact";
}

<div class="row form">
    <div class="col-md-4">
        <h2>Contact DisneyCafe!</h2>
        <section>
            <form id="send-message" method="post">
                <hr />
                <div class="form-group">
                    <input class="form-control" placeholder="Email" asp-for="EmailAddress" />
                    <span class="text-danger"  asp-validation-for="EmailAddress"></span>
                </div>
                <div class="form-group">
                    <input class="form-control" placeholder="Subject (Optional)" asp-for="Subject" />
                </div>
                <div class="form-group">
                    <textarea cols="10" rows="10" class="form-control" id="form-message" placeholder="Send us a message..." asp-for="Body"></textarea>
                    <span class="text-danger" asp-validation-for="Body"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn">Send Message</button>
                </div>
            </form>
        </section>
        <a href="https://www.facebook.com/tannerdisney.programmer"><i class="fab fa-facebook-square fa-3x" style="color:#3b5998 !important;"></i></a>
        <a href="https://github.com/TannerDisney"><i class="fab fa-github-square fa-3x" style="color: #000000 !important;"></i></a>
        <a href="https://www.linkedin.com/in/tanner-disney-cptc/"><i class="fab fa-linkedin fa-3x" style="color:#2867B2 !important;"></i></a>
</div>
</div>

